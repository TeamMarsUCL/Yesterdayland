<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">


    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        android:src="@drawable/homepage_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="323dp"
        android:layout_height="338dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_tomorrowland"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/bt_map"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="136dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">
    </ImageButton>

    <ImageButton
        android:id="@+id/bt_socialWall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="136dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/fire_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background"
        app:layout_constraintEnd_toEndOf="parent"></ImageButton>

    <ImageButton
        android:id="@+id/bt_search"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="136dp"
        android:scaleType="centerCrop"
        android:src="@drawable/search_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">
    </ImageButton>

    <ImageButton
        android:id="@+id/bt_upcomingEvents"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/calendar_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">
    </ImageButton>

    <ImageButton
        android:id="@+id/bt_topUp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/qr_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">
    </ImageButton>

    <ImageButton
        android:id="@+id/bt_contactUs"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/phone_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">
    </ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>